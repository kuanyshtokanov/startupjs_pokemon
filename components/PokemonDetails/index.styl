.wrapper
  padding 1u 1u
  flex 1
  flex-basis auto
  min-width 200px
  width 100%
  align-items center
  padding 2u
  +tablet()
    padding 4u

.top
  flex-direction row
  +tablet()
    font-size 3u
  +desktop()
    font-size 4u

.name, .order
  +tablet()
    font-size 3u
  +desktop()
    font-size 4u

.order
  opacity 0.9
  margin-left 1u

.middle
  width 100%
  justify-content space-between
  margin-top 2u
  +tablet()
    margin-top 3u
  +desktop()
    flex-direction row
    margin-top 4u

.avatar
  align-items center
  background #F2F2F2
  +desktop()
    width 30%

.avatarImg
  width 20u
  height 20u
  +tablet()
    width 30u
    height 30u

.right
  margin-top 2u
  +desktop()
    margin-top 0
    width 60%

.additionalInfoTxt, .abilitiesTxt
  +tablet()
    font-size 2.5u
  +desktop()
    font-size 3u

.typesLabel, .abilitiesLabel
  +tablet()
    font-size 2u
  +desktop()
    font-size 2.5u

.types
  align-items flex-start
  margin-top 2u

.abilities
  margin-top 2u

.abilitiesTxt
  margin-top 1u

.buttons
  flex-direction row
  justify-content center
  margin-top 1u
  +tablet()
    margin-top 2u
  +desktop()
    margin-top 3u
    justify-content flex-start

.btn
  margin-left 2u
